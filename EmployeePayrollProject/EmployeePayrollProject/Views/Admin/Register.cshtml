@model Commonlayer.Models.RequestModel.Credential

@{
    ViewBag.Title = "Register";
}



<body>
    <div class="row justify-content-md-center">
        <div class="col-md-5">
            @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
            {
                //@Html.ValidationSummary()
                @Html.AntiForgeryToken()

                <div class="card" style="width: 472px; height: 412px; position: relative; top: -138px; left:102px">
                    <div class="card-header">
                        <div class="card-title" style="font-size:16px">Register</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @style = "font-size:16px" })
                            @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "UserName", @style = "font-size:16px" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
                        </div>

                        @Html.Partial("~/Views/Shared/_RegisterLogin.cshtml", Model)
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @style = "font-size:16px" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confim Password", @style = "font-size:16px" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-danger" value="Register" style="font-size:16px" />
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</body>

